@model CatalogIndexViewModel

<div class="container-fluid">
        <div class="row mt-3 pb-0">
            <div class="col-6 text-start">
                <p class="bi bi-sliders text-muted" style="font-size: 1.2rem;"> Filter</p>
            </div>
            <div class="col-6 text-end">
                <p class="text-muted">Total found: @Model.PagedList.TotalItems</p>
            </div>
            <hr class="featurette-divider">
        </div>
        <div class="row">
            <div class="col-2">
                <form method="get">
                    <div class="mb-3">
                        <label>Range Price</label>
                        <div class="input-group">
                            <input asp-for="@Model.MinPrice" value="@Model.MinPrice" class="form-control shadow-none" />
                            <span class="input-group-text"><i class="bi bi-cash-coin"></i></span>
                            <input asp-for="@Model.MaxPrice" value="@Model.MaxPrice" class="form-control shadow-none" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Brands"></label>
                        <select asp-for="@Model.BrandId" asp-items="@Model.Brands" class="form-select shadow-none"></select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Genders"></label>
                        <select asp-for="@Model.GenderId" asp-items="@Model.Genders" class="form-select shadow-none"></select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.AromaTypes"></label>
                        <select asp-for="@Model.AromaTypeId" asp-items="@Model.AromaTypes" class="form-select shadow-none"></select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.ReleaseForms"></label>
                        <select asp-for="@Model.ReleaseFormId" asp-items="@Model.ReleaseForms" class="form-select shadow-none"></select>
                    </div>
                    <hr class="featurette-divider">
                    <div class="d-grid gap-2">
                        <button type="submit" class="w-100 btn btn-success btn-sm shadow-none">
                            <i class="bi bi-check-lg"></i>
                            Apply Filter
                        </button>
                        <a asp-controller="Catalog" asp-action="Reset" class="w-100 btn btn-primary btn-sm shadow-none">
                            <i class="bi bi-arrow-counterclockwise"></i>
                            Reset Filter
                        </a>
                    </div>
                </form>
            </div>
            <div class="col-1"></div>
            <div class="col-9">
                <partial name="~/Areas/User/Views/Shared/_ProductCards.cshtml" model="Model.PagedList.Items">
            </div>
            <div class="col-12 text-end">
                @if (Model.PagedList.TotalPages == 0)
                {
                    <p class="p-2"></p>
                }
                else
                {
                <p class="text-muted">Page @(Model.PagedList.PageIndex + 1) - @Model.PagedList.TotalPages</p>
                }
            </div>
            <hr class="featurette-divider">
            <partial name="~/Views/Shared/Components/_Pagination.cshtml" model="Model.PagedList">
        </div>
</div>