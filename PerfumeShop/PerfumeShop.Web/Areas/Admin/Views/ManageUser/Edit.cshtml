@model EditUserViewModel

<form method="post" asp-controller="ManageUser" asp-action="Edit" class="row g-3 needs-validation" novalidate>

	<input asp-for="@Model.Id" hidden />
	<input asp-for="@Model.Email" hidden />

	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h2 class="text-muted">Edit User "@Model.Email"</h2>
		<div class="btn-toolbar mb-2 mb-md-0">
			<div class="text-end">

				<button type="submit" class="btn btn-outline-secondary btn-sm shadow-none" style="width:80px">
					<span class="bi bi-check-lg">Save</span>
				</button>

				<a asp-controller="ManageUser" asp-action="Index" class="btn btn-outline-secondary btn-sm shadow-none" style="width:80px">
					<span class="bi bi-reply"> Back</span>
				</a>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">

			<div asp-validation-summary="All" class="text-danger"></div>
			@if (ViewBag.CurrentUserId != Model.Id)
			{
				<div class="mb-3">
					<label asp-for="@Model.Role" class="fw-bold"></label>
					<select asp-for="@Model.Role" asp-items="@Model.RoleList" class="form-select" required>
						<option selected disabled value="">@Model.Role</option>
					</select>
					<span asp-validation-for="@Model.Role" class="text-danger"></span>
					<div class="valid-feedback">
						Valid!
					</div>
				</div>
			}
			else
			{
				<div class="mb-3">
					<label asp-for="@Model.Role" class="fw-bold"></label>
					<select class="form-select" disabled>
						<option selected disabled value="">@Model.Role</option>
					</select>
					<p>This is your account, you cannot change this property.</p>
					<span asp-validation-for="@Model.Role" class="text-danger"></span>
					<div class="valid-feedback">
						Valid!
					</div>
				</div>
			}
			<div class="mb-3">
				<label asp-for="@Model.FirstName" class="fw-bold"></label>
				<input asp-for="@Model.FirstName" class="form-control">
				<span asp-validation-for="@Model.FirstName" class="text-danger"></span>
				<div class="valid-feedback">
					Optional!
				</div>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.LastName" class="fw-bold"></label>
				<input asp-for="@Model.LastName" class="form-control">
				<span asp-validation-for="@Model.LastName" class="text-danger"></span>
				<div class="valid-feedback">
					Optional!
				</div>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.State" class="fw-bold"></label>
				<input asp-for="@Model.State" class="form-control">
				<span asp-validation-for="@Model.State" class="text-danger"></span>
				<div class="valid-feedback">
					Optional!
				</div>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.City" class="fw-bold"></label>
				<input asp-for="@Model.City" class="form-control">
				<span asp-validation-for="@Model.City" class="text-danger"></span>
				<div class="valid-feedback">
					Optional!
				</div>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.StreetAddress" class="fw-bold"></label>
				<input asp-for="@Model.StreetAddress" class="form-control">
				<span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
				<div class="valid-feedback">
					Optional!
				</div>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.PhoneNumber" class="fw-bold"></label>
				<input asp-for="@Model.PhoneNumber" class="form-control">
				<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
				<div class="valid-feedback">
					Optional!
				</div>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.PostalCode" class="fw-bold"></label>
				<input asp-for="@Model.PostalCode" class="form-control">
				<span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
				<div class="valid-feedback">
					Optional!
				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}