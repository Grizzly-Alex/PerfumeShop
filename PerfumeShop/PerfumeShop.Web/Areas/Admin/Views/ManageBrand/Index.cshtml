@model IEnumerable<CatalogItemViewModel>


<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h2 class="text-muted">Brands</h2>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="text-end">
            <a asp-controller="ManageBrand" asp-action="Create" class="btn btn-outline-secondary btn-sm shadow-none" style="width:80px">
                <span class="bi bi-pen">Add</span>
            </a>
        </div>
    </div>
</div>


@if (Model.Count() == 0)
{
    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr>
                <th>
                    Name
                </th>
            </tr>
        </thead>
    </table>
}
else
{
    <table id="brandData" class="table table-bordered table-striped table-sm">
        <thead>
            <tr>
                <th>Name</th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td align="center">
                        @*renderer buttons in ajax table*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts{
    <script src="~/js/brand-table.js"></script>
}
