@model OrderCreateViewModel

<form asp-area="Shop" asp-controller="Order" asp-action="OrderByCourier" method="post" class="needs-validation" novalidate>

    <input asp-for="@Model.Buyer.Id" hidden />
    <input asp-for="@Model.Basket.Id" hidden />


    <div class="row g-3 my-3">
        <h5 class="mb-3">Buyer information</h5>

        <div class="col-12">
            <label asp-for="@Model.Buyer.Email"></label>
            <input asp-for="@Model.Buyer.Email" class="form-control" required />
            <span asp-validation-for="@Model.Buyer.Email" class="text-danger"></span>
            <div class="valid-feedback">
                Valid
            </div>
        </div>
        <div class="col-sm-6">
            <label asp-for="@Model.Buyer.FirstName"></label>
            <input asp-for="@Model.Buyer.FirstName" class="form-control" required />
            <span asp-validation-for="@Model.Buyer.FirstName" class="text-danger"></span>
            <div class="valid-feedback">
                Valid
            </div>
        </div>

        <div class="col-sm-6">
            <label asp-for="@Model.Buyer.LastName"></label>
            <input asp-for="@Model.Buyer.LastName" class="form-control" required />
            <span asp-validation-for="@Model.Buyer.LastName" class="text-danger"></span>
            <div class="valid-feedback">
                Valid
            </div>
        </div>

        <div class="col-12">
            <label asp-for="@Model.Buyer.PhoneNumber"></label>
            <input asp-for="@Model.Buyer.PhoneNumber" class="form-control" type="tel" placeholder="ex: 1-541-754-3010" required />
            <span asp-validation-for="@Model.Buyer.PhoneNumber" class="text-danger"></span>
            <div class="valid-feedback">
                Valid
            </div>
        </div>
    </div>

    <div class="row g-3 my-3">
        <h5 class="mb-3">Billing address</h5>

        <div class="col-6">
            <label asp-for="@Model.Address.State"></label>
            <input asp-for="@Model.Address.State" class="form-control" required />
            <span asp-validation-for="@Model.Address.State" class="text-danger"></span>
            <div class="valid-feedback">
                Valid
            </div>
        </div>

        <div class="col-6">
            <label asp-for="@Model.Address.City"></label>
            <input asp-for="@Model.Address.City" class="form-control" required />
            <span asp-validation-for="@Model.Address.City" class="text-danger"></span>
            <div class="valid-feedback">
                Valid
            </div>
        </div>

        <div class="col-10">
            <label asp-for="@Model.Address.StreetAddress"></label>
            <input asp-for="@Model.Address.StreetAddress" class="form-control" placeholder="ex: 123 Main Street, Apartment 666" required />
            <span asp-validation-for="@Model.Address.StreetAddress" class="text-danger"></span>
            <div class="valid-feedback">
                Valid
            </div>
        </div>

        <div class="col-2">
            <label asp-for="@Model.Address.PostalCode"></label>
            <input asp-for="@Model.Address.PostalCode" class="form-control" placeholder="ex: 220050" required />
            <span asp-validation-for="@Model.Address.PostalCode" class="text-danger"></span>
            <div class="valid-feedback">
                Valid
            </div>
        </div>
    </div>

    <div class="row g-3 my-3">
        <h5 class="mb-3">Payment method</h5>

        @foreach(var item in Model.PaymentMethods)
        {
            <div class="form-check form-check-inline">              
                @Html.RadioButtonFor(model => model.PaymentMethodId, item.Value) @item.Text 
            </div>
        }
        <span asp-validation-for="@Model.PaymentMethodId" class="text-danger"></span>
        <div class="valid-feedback">
            Valid
        </div>
    </div>

    <div class="col-3 py-3">
        <button class="w-100 btn btn-primary btn-lg" type="submit">Order</button>
    </div>
</form>