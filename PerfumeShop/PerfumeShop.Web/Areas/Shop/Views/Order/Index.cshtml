@model OrderCreateViewModel


<div class="container h-100 py-5">
    <div class="row g-5">
        <div class="col-lg-8">
            <h3 class="fw-bold mb-0 text-black">
                <i class="bi bi-clipboard-check"></i>&nbsp;
                Checkout
            </h3>
            <div class="py-4">
                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="pills-courier-tab" 
                        data-bs-toggle="pill" data-bs-target="#pills-courier"
                        type="button" role="tab" aria-controls="pills-courier"
                        aria-selected="true">Courier delivery</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="pills-pickup-tab"
                        data-bs-toggle="pill" data-bs-target="#pills-pickup"
                        type="button" role="tab" aria-controls="pills-pickup"
                        aria-selected="false">Pickup delivery</button>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">

                    @*Courier delivery form*@
                    <div class="tab-pane fade" id="pills-pickup" role="tabpanel" aria-labelledby="pills-courier-tab" tabindex="0">
                        <partial name="~/Areas/Shop/Views/Order/_CourierDeliveryForm.cshtml" model="@Model" />
                    </div>

                    @*Pickup form*@
                    <div class="tab-pane fade show active" id="pills-courier" role="tabpanel" aria-labelledby="pills-pickup-tab" tabindex="0">
                        <partial name="~/Areas/Shop/Views/Order/_PickupForm.cshtml" model="@Model" />
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 order-md-last">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-primary">Summary</span>
            </h4>
            <ul class="list-group mb-3">

                @foreach (var item in Model.Basket.Items)
                {
                    <li class="list-group-item d-flex justify-content-between lh-sm">
                        <div>
                            <h6 class="my-0">@item.Brand</h6>
                            <small class="text-muted">@item.Name</small>
                        </div>
                        <span class="text-muted">@item.UnitPrice.ToString("c") x @item.Quantity</span>
                    </li>
                }

                <li class="list-group-item d-flex justify-content-between bg-light">
                    <div class="text-success">
                        <h6 class="my-0">Promo code</h6>
                        <small>EXAMPLECODE</small>
                    </div>
                    <span class="text-success">−$5</span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (USD)</span>
                    <strong>@Model.Basket.FinalPrice.ToString("c")</strong>
                </li>
            </ul>
        </div>
    </div>
</div>



