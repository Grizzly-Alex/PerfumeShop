@{
    ViewData["Title"] = "My Orders";
}

<h2 class="text-muted">@ViewData["Title"]</h2>
<hr />

<table id="orderHistoryData" class="table table-bordered table-striped table-sm">
    <thead>
        <tr>
            <th>Order Number</th>
            <th>Date</th>
            <th>Order Status</th>
            <th>Payment Status</th>
            <th>Payment Method</th>
            <th>Customer Name</th>
            <th>Customer Phone</th>
            <th>Customer Email</th>
            <th>Address Delivery</th>
            <th>Items Cost</th>
            <th>Total Price</th>
            <th></th>     
        </tr>
    </thead>
</table>

@section Scripts{
    <script src="~/js/tables/orderHistory-table.js"></script>
}