@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<body>
    <div class="vh-100 d-flex justify-content-center">       
        <div>
            @if (Model.Result.Success)
            {
                <div class="mb-4 text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="text-success bi bi-check-circle-fill" width="75" height="75"
                         fill="currentColor" viewBox="0 0 16 16">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                    </svg>
                </div>
            }
            else
            {
                <div class="mb-4 text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="text-danger bi bi-check-circle-fill" width="75" height="75"
                         fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19.1 4.9C15.2 1 8.8 1 4.9 4.9S1 15.2 4.9 19.1s10.2 3.9 14.1 0s4-10.3.1-14.2zm-4.3 11.3L12 13.4l-2.8 2.8l-1.4-1.4l2.8-2.8l-2.8-2.8l1.4-1.4l2.8 2.8l2.8-2.8l1.4 1.4l-2.8 2.8l2.8 2.8l-1.4 1.4z" />
                    </svg>
                </div>
            }

            <div class="text-center">
                <h1>@ViewData["Title"]</h1>
                <p class="p-3">
                    <partial name="~/Views/Shared/Components/_StatusMessage.cshtml" model="Model.Result.StatusMessage" />
                </p>
            </div>
        </div>
    </div>
</body>