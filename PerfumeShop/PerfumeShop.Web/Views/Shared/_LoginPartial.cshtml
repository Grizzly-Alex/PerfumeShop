@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
@if (SignInManager.IsSignedIn(User))
{
    @*<a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>*@
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "Shop"})">
        <button id="logout" type="submit" class="nav-link px-3 fs-5 text-white scale">Logout</button>
    </form> 
}
else
{
    <a asp-area="Identity" asp-page="/Account/Register" class="nav-link px-3 fs-5 text-white scale">Register</a>
    <a asp-area="Identity" asp-page="/Account/Login" class="nav-link px-3 fs-5 text-white scale">Login</a>    
}
</ul>

