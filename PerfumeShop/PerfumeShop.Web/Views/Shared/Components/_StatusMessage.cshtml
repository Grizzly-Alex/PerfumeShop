@model NotificationViewModel
@{
    string statusMessage = Model.Status switch
    {
        NotificationStatus.Success => "success",
        NotificationStatus.Error => "danger",
        NotificationStatus.Warning => "warning",
        NotificationStatus.Info => "info",
        _=> "info"
    };

    <div class="alert alert-@statusMessage alert-dismissible fade show" role="alert">
        @Model.Text
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}